#vcomments .vheader .vnick {
      width: 27%;
      border: 3px solid #dedede;
      margin-left: 20px;
      padding-left: 20px;
      padding-right: 10px;
      border-radius: 5px
}

#vcomments .vheader .vmail {
      width: 27%;
      border: 3px solid #dedede;
      margin-left: 15px;
      padding-left: 10px;
      padding-right: 10px;
      border-radius: 5px
}

#vcomments .vheader .vlink {
      width: 27%;
      border: 3px solid #dedede;
      margin-left: 15px;
